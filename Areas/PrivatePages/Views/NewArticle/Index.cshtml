
@{
    ViewBag.Title = "Index";
}
@model ShopOnlineDemo.Models.BaiViet


<section class="content">
    <div class="container-fluid">
        @using (Html.BeginForm("Index", "NewArticle", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <div class="row">
            <!-- left column -->
            <div class="col-md-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin chính</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tên bài viết</label>
                                @Html.TextBoxFor(m => m.tenBV, new { @class = "form-control", @placeholder = "Tên bài viết tối đa 35 ký tự" })
                            </div>
                            <div class="form-group">
                                <label for="ndtt">Nội dung tóm tắt</label>
                                @Html.TextAreaFor(m=>m.ndTomTat, new { @class = "form-control", @rows = "5", @placeholder = "Summary for article" })
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Ngày đăng</label>
                                        @Html.TextBoxFor(m => m.ngayDang, new { @class = "form-control", @disabled = "disabled" })
                                    </div>
                                </div>
                                <div class="col-ms-4">
                                    <div class="form-group">
                                        <label>Tài khoản</label>
                                        @Html.TextBoxFor(m => m.taiKhoan, new { @class = "form-control", @disabled = "disabled" })
                                    </div>
                                </div>
                                <div class="col-ms-4">
                                    <div class="form-group">
                                        <label>Số lần đọc</label>
                                        @Html.TextBoxFor(m => m.soLanDoc, new { @class = "form-control", @disabled = "disabled" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Check me out</label>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--Right column-->
            <div class="col-md-4">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">General Elements</h3>
                    </div>
                    <div class="card-body">
                        <img src="@ViewBag.ddHinh" class="img-thumbnail" style="width: 100%;" />
                        <label for="exampleInputFile">File input</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="exampleInputFile" name="HinhDaiDien">
                                <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                            </div>
                            <div class="input-group-append">
                                <span class="input-group-text">Upload</span>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <div class="col-md-12">
                <div class=" card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Nội dung bài viết</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            @Html.TextAreaFor(m=>m.noiDung, new { @class = "textarea", @placeholder = "Place some text here", @id = "VungSoanThao",
                                      @style = "width: 100%; height: 600px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" })
                        </div>
                        <p class="text-sm mb-0">
                            Editor <a href="http://github.com/bootstrap-wysiwyg/bootstrap3-wysiwyg">
                                Document and license
                                information
                            </a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
            }
    </div>
</section>

<script src="https://cdn.tiny.cloud/1/pb1tvopmmj0xiha4m74h0u8owpj08gym1qq5qk0ve0eexyax/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: 'textarea#VungSoanThao',
        plugins: 'a11ychecker advcode casechange export formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
        toolbar: 'a11ycheck addcomment showcomments casechange checklist code export formatpainter pageembed permanentpen table',
        toolbar_mode: 'floating',
        tinycomments_mode: 'embedded',
        tinycomments_author: 'Author name',
    });
</script>

